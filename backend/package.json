{
  "name": "backend",
  "version": "1.0.0",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "dev": "ts-node src/app.ts",
    "seed": "node --loader ts-node/esm prisma/seed.ts",
    "build": "tsc && prisma generate && npm run copy-files",
    "copy-files": "mkdir -p dist/prisma && cp -r prisma/schema.prisma dist/prisma/",
    "start": "cross-env NODE_ENV=production node dist/api.js",
    "prisma:dev": "dotenv -e .env.development -- prisma",
    "prisma:prod": "prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.11.1",
    "@types/express": "^5.0.3",
    "cors": "^2.8.5",
    "cpf-cnpj-validator": "^1.0.3",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "ts-node-dev": "^2.0.0",
    "uuid": "^11.1.0",
    "zod": "^3.25.71"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@types/babel__core": "^7.20.5",
    "@types/babel__generator": "^7.27.0",
    "@types/babel__parser": "^7.0.0",
    "@types/babel__template": "^7.4.4",
    "@types/babel__traverse": "^7.20.7",
    "@types/cors": "^2.8.19",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.1",
    "@types/supertest": "^6.0.3",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "jest": "^29.7.0",
    "prisma": "^6.11.1",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
